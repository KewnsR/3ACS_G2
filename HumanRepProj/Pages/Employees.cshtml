@page
@model EmployeesModel
@{
    ViewData["Title"] = "Employees";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .employee-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .action-dropdown-toggle::after {
            display: none;
        }

        .status-badge {
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 700;
            border-radius: 0.25rem;
        }

        .input-group {
            display: flex !important;
            flex-wrap: nowrap !important;
        }
    </style>
}

<div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2 mb-0">Employee Management</h1>

    <div class="d-flex" style="gap: 10px;">
        <!-- Search Group - will absolutely be side by side -->
        <div style="display: flex;">
            <input type="text" class="form-control" placeholder="Search employees..." style="border-top-right-radius: 0; border-bottom-right-radius: 0;">
            <button class="btn btn-outline-secondary" type="button" style="border-top-left-radius: 0; border-bottom-left-radius: 0;">
                <i class="fas fa-search"></i>
            </button>
        </div>

        <!-- Add Employee Button -->
        <button type="button" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Employee
        </button>
    </div>
</div>

