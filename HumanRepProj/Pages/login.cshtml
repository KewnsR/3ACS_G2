@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HRIS - Login</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
</head>
<body class="login-body">
    <div class="container">
        <h2><strong>HRIS</strong></h2>
        <p>Human Resource Information System</p>

        <div class="tabs">
            <button class="tab active">Login</button>
            <button class="tab"><a href="/Register">Sign Up</a></button>
        </div>

        <form method="post">
            <div class="form-group">
                <label>Email or Username</label>
                <input type="username" asp-for="Input.Email" required placeholder="name@example.com" />
            </div>

            <div class="form-group">
                <label>Password <a href="#" class="forgot-password">Forgot password?</a></label>
                <input type="password" asp-for="Input.Password" required />
            </div>

            <button type="submit" class="btn">Login</button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p style="color: red;">@Model.ErrorMessage</p>
            }
        </form>
    </div>
</body>
</html>
