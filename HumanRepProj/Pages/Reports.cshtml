@page
@model ReportsModel
@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .scrollable-container {
            max-height: calc(100vh - 56px); /* Subtract header height */
            overflow-y: auto;
            padding-right: 1rem; /* Optional: Add padding for better UX */
        }

            .scrollable-container::-webkit-scrollbar {
                width: 8px;
            }

            .scrollable-container::-webkit-scrollbar-thumb {
                background-color: #0d6efd;
                border-radius: 4px;
            }

            .scrollable-container::-webkit-scrollbar-track {
                background-color: #f8f9fa;
            }

        .report-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            height: 100%;
        }

            .report-card:hover {
                transform: translateY(-5px);
            }

        .chart-container {
            height: 300px;
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
        }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
        }
    </style>
}

<div class="scrollable-container">
    <!-- Existing content -->
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">HR Analytics Reports</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-download"></i> Export
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-printer"></i> Print
                </button>
            </div>
            <div class="input-group me-2" style="width: 200px;">
                <input type="month" class="form-control">
            </div>
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="departmentDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-building"></i> All Departments
                </button>
                <ul class="dropdown-menu" aria-labelledby="departmentDropdown">
                    <li><a class="dropdown-item" href="#">All Departments</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Engineering</a></li>
                    <li><a class="dropdown-item" href="#">Marketing</a></li>
                    <li><a class="dropdown-item" href="#">Product</a></li>
                    <li><a class="dropdown-item" href="#">Sales</a></li>
                    <li><a class="dropdown-item" href="#">HR</a></li>
                </ul>
            </div>
        </div>
    </div>

<!-- Report Type Navigation -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <a class="nav-link active" href="#"><i class="bi bi-speedometer2 me-1"></i> Overview</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#"><i class="bi bi-clock-history me-1"></i> Attendance</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#"><i class="bi bi-graph-up me-1"></i> Performance</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#"><i class="bi bi-cash-stack me-1"></i> Payroll</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#"><i class="bi bi-people me-1"></i> Recruitment</a>
    </li>
</ul>

<!-- Summary Cards -->
<div class="row mb-4 g-4">
    <div class="col-md-3">
        <div class="card report-card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">TOTAL EMPLOYEES</h6>
                        <p class="card-text display-6">245</p>
                        <p class="card-text"><small>+12 from last month</small></p>
                    </div>
                    <i class="bi bi-people-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card report-card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">AVG. ATTENDANCE</h6>
                        <p class="card-text display-6">96.5%</p>
                        <p class="card-text"><small>+2.1% from last month</small></p>
                    </div>
                    <i class="bi bi-clipboard2-check fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card report-card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">TURNOVER RATE</h6>
                        <p class="card-text display-6">3.2%</p>
                        <p class="card-text"><small>+0.5% from last month</small></p>
                    </div>
                    <i class="bi bi-arrow-left-right fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card report-card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title">AVG. PERFORMANCE</h6>
                        <p class="card-text display-6">8.7/10</p>
                        <p class="card-text"><small>+0.3 from last month</small></p>
                    </div>
                    <i class="bi bi-star-fill fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="row g-4 mb-4">
    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Employee Growth</h5>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="growthDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Last 12 Months
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="growthDropdown">
                        <li><a class="dropdown-item" href="#">Last 3 Months</a></li>
                        <li><a class="dropdown-item" href="#">Last 6 Months</a></li>
                        <li><a class="dropdown-item" href="#">Last 12 Months</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Custom Range</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <!-- Chart placeholder - would be replaced with actual chart in production -->
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center">
                            <i class="bi bi-bar-chart-line fs-1 text-muted"></i>
                            <p class="mt-2">Employee growth chart would display here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Department Distribution</h5>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="deptDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        By Headcount
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="deptDropdown">
                        <li><a class="dropdown-item" href="#">By Headcount</a></li>
                        <li><a class="dropdown-item" href="#">By Salary Budget</a></li>
                        <li><a class="dropdown-item" href="#">By Turnover</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container">
                    <!-- Chart placeholder - would be replaced with actual chart in production -->
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center">
                            <i class="bi bi-pie-chart fs-1 text-muted"></i>
                            <p class="mt-2">Department distribution chart would display here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Performance Trends Chart -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Performance Trends</h5>
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="perfDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Quarterly
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="perfDropdown">
                        <li><a class="dropdown-item" href="#">Monthly</a></li>
                        <li><a class="dropdown-item" href="#">Quarterly</a></li>
                        <li><a class="dropdown-item" href="#">Yearly</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 400px;">
                    <!-- Chart placeholder - would be replaced with actual chart in production -->
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <div class="text-center">
                            <i class="bi bi-graph-up fs-1 text-muted"></i>
                            <p class="mt-2">Performance trends chart would display here</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
