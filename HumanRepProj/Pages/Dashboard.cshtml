@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}

@section Styles {
    <style>
        .scrollable-container {
            position: absolute; /* Position it properly */
            left: 256px; /* Match sidebar width exactly */
            top: 0;
            width: calc(100% - 256px); /* Take remaining width */
            height: 100vh; /* Full viewport height */
            overflow-y: auto; /* Single scrollbar */
            padding: 20px; /* Content padding */
            box-sizing: border-box;
        }

            /* Scrollbar styling */
            .scrollable-container::-webkit-scrollbar {
                width: 8px;
            }

            .scrollable-container::-webkit-scrollbar-thumb {
                background-color: #0d6efd;
                border-radius: 4px;
            }

            .scrollable-container::-webkit-scrollbar-track {
                background-color: #f8f9fa;
            }

        /* Main layout structure */
        .app-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Main content container */
        .content-area {
            flex: 1;
            width: calc(100vw - 256px); /* Adjust based on your sidebar width */
            padding: 20px;
            box-sizing: border-box;
            width: auto;
        }

        /* Dashboard cards */
        .dashboard-card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            height: 100%;
        }

            .dashboard-card:hover {
                transform: translateY(-5px);
            }

        .activity-item {
            border-left: 3px solid #0d6efd;
            padding-left: 1rem;
            margin-bottom: 1.5rem;
        }

        .chart-container {
            height: 300px;
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .content-area

        {
            width: 100%;
            padding: 10px;
        }

        .dashboard-card {
            margin-bottom: 15px;
        }

        .chart-container {
            height: 250px;
        }

        }
    </style>
}
<div class="scrollable-container">
<div class="content-area">
    <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2 mb-0">Dashboard Overview</h1>

        <div class="d-flex align-items-center" style="gap: 8px;">
            <!-- Date Range Buttons -->
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-calendar-week"></i> This Week
                </button>
                <button type="button" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-calendar-month"></i> This Month
                </button>
            </div>

            <!-- Export Button -->
            <button type="button" class="btn btn-sm btn-outline-primary">
                <i class="bi bi-download"></i> Export
            </button>
        </div>
    </div>
    <div class="alert alert-primary" role="alert">
        <i class="bi bi-info-circle-fill me-2"></i> Welcome back to your HR dashboard. You have 3 pending tasks to complete today.
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4 g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">TOTAL EMPLOYEES</h6>
                            <p class="card-text display-6">245</p>
                            <p class="card-text"><small>+12 from last month</small></p>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">DEPARTMENTS</h6>
                            <p class="card-text display-6">12</p>
                            <p class="card-text"><small>+2 new departments</small></p>
                        </div>
                        <i class="bi bi-building fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">ATTENDANCE RATE</h6>
                            <p class="card-text display-6">96.5%</p>
                            <p class="card-text"><small>+2.1% from last month</small></p>
                        </div>
                        <i class="bi bi-clipboard2-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="card dashboard-card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">PAYROLL</h6>
                            <p class="card-text display-6">$245,500</p>
                            <p class="card-text"><small>Processed this month</small></p>
                        </div>
                        <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Activities -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Employee Growth</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <!-- Chart placeholder -->
                        <div class="d-flex align-items-center justify-content-center h-100">
                            <div class="text-center">
                                <i class="bi bi-bar-chart-line fs-1 text-muted"></i>
                                <p class="mt-2">Employee growth chart would display here</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Activities</h5>
                    <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body" style="overflow-y: auto; max-height: 350px;">
                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1"><i class="bi bi-person-plus-fill text-primary me-2"></i>New employee onboarded</h6>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                        <p class="mb-1 small">Sarah Johnson joined as UX Designer</p>
                    </div>

                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1"><i class="bi bi-list-check text-success me-2"></i>Performance review completed</h6>
                            <small class="text-muted">5 hours ago</small>
                        </div>
                        <p class="mb-1 small">15 reviews completed this week</p>
                    </div>

                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1"><i class="bi bi-calendar-check text-info me-2"></i>Leave request approved</h6>
                            <small class="text-muted">Yesterday</small>
                        </div>
                        <p class="mb-1 small">Michael Chan - 5 days vacation</p>
                    </div>

                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1"><i class="bi bi-person-x-fill text-danger me-2"></i>Employee resigned</h6>
                            <small class="text-muted">2 days ago</small>
                        </div>
                        <p class="mb-1 small">Robert Smith - Software Engineer</p>
                    </div>

                    <div class="activity-item">
                        <div class="d-flex justify-content-between">
                            <h6 class="mb-1"><i class="bi bi-award text-warning me-2"></i>Employee of the month</h6>
                            <small class="text-muted">3 days ago</small>
                        </div>
                        <p class="mb-1 small">Emily Davis selected for April</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Tasks Section -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">Upcoming Tasks</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Task</th>
                            <th>Assignee</th>
                            <th>Due Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Complete Q2 Performance Reviews</td>
                            <td>HR Team</td>
                            <td>May 15, 2023</td>
                            <td><span class="badge bg-warning">In Progress</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>
                        <tr>
                            <td>Process May Payroll</td>
                            <td>Finance Team</td>
                            <td>May 5, 2023</td>
                            <td><span class="badge bg-primary">Pending</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>
                        <tr>
                            <td>Onboard New Marketing Team</td>
                            <td>Recruitment</td>
                            <td>May 10, 2023</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>
                        <tr>
                            <td>Update Employee Handbook</td>
                            <td>HR Team</td>
                            <td>May 20, 2023</td>
                            <td><span class="badge bg-secondary">Not Started</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary">View</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
@section Scripts {
    <script>
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}